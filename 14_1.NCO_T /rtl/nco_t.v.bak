module nco_t (
    input sys_clk,
    input sys_rst_n,
    output [7:0] da_data
);

assign rst = sys_rst_n&locked;
wire locked;
wire clk_100m;

  pll	pll_inst (
	.areset ( ~sys_rst_n ),
	.inclk0 ( sys_clk ),
	.c0 ( clk_100m ),
	.locked ( locked )
	);

// ! phi_inc_i = (desired_frequency Ã— 2^N) / clock_frequency

  NCO u0 (
        .clk       (clk_100m),       // clk.clk
        .reset_n   (rst),   // rst.reset_n
        .clken     (1'b1),     //  in.clken
        .phi_inc_i ('d13107), //    .phi_inc_i
        .fsin_o    (da_data),    // out.fsin_o
        .out_valid ()  //    .out_valid
    );

endmodule